script/source = "extends Node3D
class_name CameraController

@onready var camera := $SpringArm3D/Camera3D
@onready var fp_camera := $Head/FPCamera3D
@onready var head := $Head
@export var mouse_sensitivity := 0.001

var using_first_person := false
var yaw := 0.0
var pitch := 0.0

func change_camera():
	using_first_person = !using_first_person

	if using_first_person:
		# Sync FP camera rotation to TP camera rotation
		fp_camera.global_rotation = camera.global_rotation
		fp_camera.rotation_degrees.x = 0
		# Properly initialize yaw and pitch from player's current rotation
		var player_rotation = get_parent().rotation
		yaw = player_rotation.y
		
		# For pitch, extract the local x rotation of the head or FP camera
		pitch = head.rotation.x

		# Reset vertical tilt to match pitch (or zero if you prefer)
		head.rotation.x = pitch

		$SpringArm3D.visible = false
	else:
		$SpringArm3D.visible = true
		
		# Sync player rotation yaw when exiting FP mode
		get_parent().rotation.y = yaw

	camera.current = not using_first_person
	fp_camera.current = using_first_person


func _input(event: InputEvent) -> void:
	if using_first_person and event is InputEventMouseMotion:
		# Update yaw and pitch with mouse movement
		yaw -= event.relative.x * mouse_sensitivity
		
		# Clamp pitch so camera can't flip vertically
		pitch = clamp(pitch, deg_to_rad(-75), deg_to_rad(75))
		
		# Apply rotations based on yaw and pitch to head and player
		head.rotation = Vector3(pitch, 0, 0)
		get_parent().rotation.y = yaw
"

